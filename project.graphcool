type File implements Node {
  id: ID! @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  contentType: String!
  name: String!
  secret: String! @isUnique
  size: Int!
  url: String! @isUnique
}

type User implements Node {
  id: ID! @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  name: String! @isUnique
  email: String @isUnique
  password: String
  links: [Link!]! @relation(name: "UserLinks")
  boards: [Board!]! @relation(name: "UserBoards")
  joinedBoards: [Board!]! @relation(name: "BoardMembers")
  votes: [Link!]! @relation(name: "LinkVoters")
}

type Link implements Node {
  id: ID! @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  title: String!
  description: String
  url: String!
  score: Int!
  author: User! @relation(name: "UserLinks")
  board: Board! @relation(name: "BoardLinks")
  trail: Link @relation(name: "LinkTrail")
  voters: [User!]! @relation(name: "LinkVoters")
  shares: [Link!]! @relation(name: "LinkTrail")
}

type Board implements Node {
  id: ID! @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  title: String!
  slug: String!
  description: String
  hidden: Boolean!
  closed: Boolean!
  owner: User! @relation(name: "UserBoards")
  members: [User!]! @relation(name: "BoardMembers")
  links: [Link!]! @relation(name: "BoardLinks")
}